{
  "version": 2,
  "builds": [
    { "src": "api/server.js", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server.js" },
    { "source": "/products", "destination": "/build/index.html" },
    { "source": "/register", "destination": "/build/index.html" },
    { "source": "/login", "destination": "/build/index.html" },
    { "source": "/(.*)", "destination": "/build/index.html" }
  ]
}
